    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "custom",
            "name": "rr replay",
            "targetCreateCommands": [
                "target create ${workspaceFolder}/target/debug/panix"
            ],
            "processCreateCommands": [
                "gdb-remote 127.0.0.1:13377",
            ],
            "reverseDebugging": true,
            "sourceLanguages": [
                "rust"
            ]
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'lexer'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=lexer"
                ],
                "filter": {
                    "name": "lexer",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "sourceLanguages": [
                "rust"
            ]
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'panix'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=panix",
                    "--package=panix"
                ],
                "filter": {
                    "name": "panix",
                    "kind": "bin"
                }
            },
            "args": [
                "/home/felix/nixos-config/util/installer_script.nix"
            ],
            "cwd": "${workspaceFolder}",
            "sourceLanguages": [
                "rust"
            ]
        },
    ]
}